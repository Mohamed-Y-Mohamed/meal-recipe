<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_background2"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="428dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="The recipe will appear here"
            android:text=""
            android:textSize="15sp"
            tools:ignore="HardcodedText">

        </TextView>

    </ScrollView>

    <EditText
        android:id="@+id/inputmeal3"
        android:layout_width="278dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Enter the meal or paritally"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retireveBtn3"
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:background="@drawable/gradient_custom_button"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="retireve"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtn3"
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:background="@drawable/gradient_custom_button"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Back"

        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />
</androidx.constraintlayout.widget.ConstraintLayout>